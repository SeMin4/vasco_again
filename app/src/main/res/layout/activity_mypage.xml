<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true"
    tools:context=".ui.activity.MyPageActivity">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/my_page_layout"
        android:gravity="center_horizontal"
        android:orientation="vertical"
        android:weightSum="14">
        <TextView
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="0.8"
            android:text="회원정보"
            android:layout_marginTop="20dp"
            android:layout_marginHorizontal="30dp"
            android:layout_marginBottom="10dp"
            android:textSize="20sp"
            android:textColor="@color/black"
            android:textStyle="bold"
            android:gravity="left|center_vertical"/>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="8"
            android:weightSum="8"
            android:orientation="vertical"
            android:layout_marginHorizontal="20dp">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1.6"
                android:orientation="horizontal"
                >

                <TextView
                    android:id="@+id/user_id"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:layout_marginHorizontal="10dp"
                    android:layout_marginVertical="5dp"
                    android:layout_gravity="center_vertical"
                    android:background="@drawable/custom_edit_text_light_gray"
                    android:drawableLeft="@drawable/ic_mail_outline_burgundy"
                    android:drawablePadding="15dp"
                    android:textSize="15sp"
                    android:elevation="3dp"/>

                <!--<TextView
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:gravity="center"
                    android:layout_weight="3.5"
                    android:text="@string/email"
                    >
                </TextView>
                <TextView
                    android:id="@+id/user_id"
                    android:layout_weight="6.5"
                    android:layout_width="0dp"
                    android:layout_height="match_parent">
                </TextView>-->
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1.6"
                android:orientation="horizontal">

                <EditText
                    android:id="@+id/change_password"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginHorizontal="10dp"
                    android:layout_marginVertical="5dp"
                    android:layout_gravity="center_vertical"
                    android:drawableLeft="@drawable/ic_lock_outline_selector"
                    android:drawablePadding="15dp"
                    android:cursorVisible="true"
                    android:hint="@string/login_password"
                    android:importantForAutofill="no"
                    android:inputType="textNoSuggestions|textPassword"
                    tools:ignore="LabelFor"
                    android:textSize="15sp"
                    android:textColorHint="@color/gray"
                    android:background="@drawable/custom_edit_text_light_gray"
                    android:elevation="3dp"/>

                <!--<TextView
                    android:layout_width="0dp"
                    android:layout_weight="3.5"
                    android:layout_height="match_parent"
                    android:gravity="center"
                    android:text="@string/password">
                </TextView>

                <EditText
                    android:id="@+id/change_password"
                    tools:ignore="LabelFor"
                    android:layout_weight="6.5"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:inputType="textNoSuggestions|textPassword"
                    android:importantForAutofill="no"
                    android:cursorVisible="true"
                    android:hint="@string/login_password"
                    android:background="@drawable/form">
                </EditText>-->
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1.6"
                android:weightSum="10"
                android:orientation="horizontal">
                <EditText
                    android:id="@+id/change_check_password"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:layout_weight="8.4"
                    android:layout_marginHorizontal="10dp"
                    android:layout_marginVertical="5dp"
                    android:drawableLeft="@drawable/ic_lock_outline_selector"
                    android:drawablePadding="15dp"
                    android:cursorVisible="true"
                    android:hint="@string/login_password"
                    android:importantForAutofill="no"
                    android:inputType="textNoSuggestions|textPassword"
                    tools:ignore="LabelFor"
                    android:textSize="15sp"
                    android:textColorHint="@color/gray"
                    android:background="@drawable/custom_edit_text_light_gray"
                    android:elevation="3dp"/>
                <!--<TextView
                    android:layout_width="0dp"
                    android:layout_weight="3.5"
                    android:layout_height="match_parent"
                    android:gravity="center"
                    android:text="@string/password_check">
                </TextView>
                <EditText
                    android:id="@+id/change_check_password"
                    tools:ignore="LabelFor"
                    android:layout_weight="4.5"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:inputType="textNoSuggestions|textPassword"
                    android:importantForAutofill="no"
                    android:cursorVisible="true"
                    android:hint="@string/login_password"
                    android:background="@drawable/form">
                </EditText>-->
                <Button
                    android:id="@+id/change_pasaword_btn"
                    android:layout_weight="1.6"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginVertical="12dp"
                    android:layout_marginRight="10dp"
                    android:background="@drawable/bg_button_border_burgundy"
                    android:text="@string/change"
                    android:textColor="@color/burgundy"
                    android:layout_gravity="center_vertical">

                </Button>
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1.6"
                android:weightSum="10"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/user_name"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginHorizontal="10dp"
                    android:layout_marginVertical="5dp"
                    android:layout_gravity="center_vertical"
                    android:layout_weight="1"
                    android:background="@drawable/custom_edit_text_light_gray"
                    android:drawableLeft="@drawable/ic_person_outline_burgundy"
                    android:drawablePadding="15dp"
                    android:textSize="15sp"
                    android:elevation="3dp"/>
                <!--<TextView
                    android:layout_width="0dp"
                    android:layout_weight="3.5"
                    android:layout_height="match_parent"
                    android:gravity="center"
                    android:text="@string/user_name">
                </TextView>
                <TextView
                    android:layout_weight="6.5"
                    android:id="@+id/user_name"
                    android:layout_width="0dp"
                    android:layout_height="50dp">

                </TextView>-->

            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1.6"
                android:weightSum="10"
                android:orientation="horizontal">
                <!--<TextView
                    android:layout_weight="3.5"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:gravity="center"
                    android:text="@string/user_department">
                </TextView>-->

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:layout_marginHorizontal="10dp"
                    android:layout_marginVertical="5dp"
                    android:layout_weight="8.4"
                    android:background="@drawable/custom_edit_text_light_gray"
                    android:orientation="horizontal"
                    android:elevation="3dp">

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:src="@drawable/ic_department_burgundy"
                        android:layout_marginRight="5dp"/>

                    <Spinner
                        android:id="@+id/change_department"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"/>
                </LinearLayout>

                <Button
                    android:id="@+id/change_department_btn"
                    android:layout_weight="1.6"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginVertical="12.5dp"
                    android:layout_marginRight="10dp"
                    android:background="@drawable/bg_button_border_burgundy"
                    android:text="@string/change"
                    android:textColor="@color/burgundy"
                    android:layout_gravity="center_vertical"/>

            </LinearLayout>
        </LinearLayout>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="0.8"
            android:text="@string/list_room"
            android:layout_marginTop="20dp"
            android:layout_marginBottom="10dp"
            android:layout_marginHorizontal="30dp"
            android:textSize="20sp"
            android:textColor="@color/black"
            android:textStyle="bold"
            android:gravity="left|center_vertical">
        </TextView>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="3.4"
            android:padding="5dp"
            android:layout_marginHorizontal="20dp"
            android:background="@drawable/custom_background_cream">

            <ListView
                android:id="@+id/my_room_list"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="5dp"
                android:clipToPadding="false"
                android:layout_marginHorizontal="10dp"
                android:divider="@null"
                />

        </LinearLayout>

        <Button
            android:id="@+id/change_confirm_btn"
            android:layout_width="match_parent"
            android:layout_weight="1"
            android:layout_height="0dp"
            android:layout_marginHorizontal="20dp"
            android:layout_marginVertical="20dp"
            android:background="@drawable/button_background_burgundy"
            android:textColor="#ffffff"
            android:text="@string/change_confirm">
        </Button>

    </LinearLayout>

</ScrollView>