<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="300dp"
    android:layout_height="wrap_content"
    android:layout_marginLeft="10dp"
    android:layout_marginRight="10dp"
    android:background="@drawable/custom_dialog_bg"
    android:orientation="vertical"
    tools:context=".ui.activity.ManageDepartmentPopUp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/manageDepartmentTitle"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:background="#00ff0000"
            android:gravity="center"
            android:text="@string/addDepartmentTitle"
            android:textColor="@color/burgundy"
            android:textSize="18sp"
            android:textStyle="bold"></TextView>
    </LinearLayout>

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="2dp"
        android:paddingLeft="10dp"
        android:paddingRight="10dp"
        android:src="@drawable/divider_burgundy" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="20dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="20dp"
            android:layout_weight="4"
            android:orientation="horizontal"
            android:padding="0dp">

            <TextView
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_marginEnd="10dp"
                android:layout_weight="1"
                android:gravity="center"
                android:text="@string/DepartmentName"
                android:textColor="@color/burgundy"
                android:textSize="15sp"
                android:textStyle="bold">

            </TextView>

            <EditText
                android:id="@+id/editText_departmentName"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="3"
                android:background="@drawable/custom_background_white"
                android:padding="10dp" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="4"
            android:orientation="horizontal"
            android:padding="0dp">

            <TextView
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_marginEnd="10dp"
                android:layout_weight="1"
                android:gravity="center"
                android:text="@string/color"
                android:textColor="@color/burgundy"
                android:textSize="15sp"
                android:textStyle="bold">

            </TextView>

            <Button
                android:id="@+id/selectColor_btn"
                style="?android:attr/borderlessButtonStyle"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="3"
                android:background="@drawable/color_change_btn"
                android:padding="10dp"
                android:text="@string/messageChangeColor"
                android:textSize="15sp"
                android:textStyle="bold" />

        </LinearLayout>


    </LinearLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="7dp"
        android:layout_marginRight="7dp"
        android:layout_marginBottom="7dp"
        android:orientation="horizontal"
        android:weightSum="2">

        <Button
            android:id="@+id/button_cancel_depart"
            style="?android:attr/borderlessButtonStyle"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginRight="7dp"
            android:layout_weight="1"
            android:background="@drawable/button_background_gray"
            android:minHeight="0dp"
            android:padding="12dp"
            android:text="@string/label_button_cancel"
            android:textColor="@color/dark_gray"
            android:textSize="15sp"

            />

        <Button
            android:id="@+id/button_accept_depart"
            style="?android:attr/borderlessButtonStyle"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_weight="1"
            android:background="@drawable/button_background_gray"
            android:backgroundTint="@color/burgundy"
            android:backgroundTintMode="multiply"
            android:minHeight="0dp"
            android:padding="12dp"
            android:text="@string/confirm"
            android:textColor="@color/white"
            android:textSize="15sp"

            />
    </LinearLayout>

</LinearLayout>